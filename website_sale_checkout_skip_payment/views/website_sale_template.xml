<openerp>
    <data>
        <template id="confirmation" inherit_id="website_sale.confirmation">
            <xpath expr="//div[@class='oe_website_sale_tx_status']"
                   position="before">
                <div class="alert alert-info" role="alert"
                     t-if="website.checkout_skip_payment">
                    Our team will check your order and send you payment
                    information soon.
                </div>
            </xpath>
            <xpath expr="//div[@class='oe_website_sale_tx_status']" position="attributes">
                <attribute name="t-if">not order.partner_id.skip_website_checkout_payment</attribute>
            </xpath>
        </template>
    </data>
</openerp>
