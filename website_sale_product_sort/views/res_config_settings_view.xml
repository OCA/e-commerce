<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_availability_setting']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="product_sort_criteria_setting">
                        <div class="o_setting_right_pane">
                            <label string="Sort Criteria" for="product_sort_criteria"/>
                            <div class="text-muted">
                                Default Sort Criteria
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="product_sort_criteria" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

</odoo>

