<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="available_promotions" name="Available promotions">
        <t t-call="website.layout">
            <div class="container">
                <h2 class="mt-3">Promotions</h2>
                <t t-if="promos">
                    <div class="row">
                        <t t-foreach="promos" t-as="promo">
                            <t t-call="website_sale_coupon_page.promotion_item" />
                        </t>
                    </div>
                </t>
            </div>
        </t>
    </template>
    <template id="promotion_item" name="Promotion Item">
        <div
            class="col-lg-4 promo-image mt-2 mb-2"
            t-if="promo.image_1920 or promo.public_name"
        >
            <div
                class="card"
                style="width: 18rem; cursor: pointer;"
                data-toggle="modal"
                t-att-data-target="'#imagemodal_%s' % promo.id"
            >
                <img
                    class="card-img-top img-fluid"
                    t-attf-src="/web/image/sale.coupon.program/#{promo.id}/image_1920"
                    t-att-alt="'%s' % promo.name"
                    t-if="promo.image_1920"
                />
                <div class="card-body" t-if="promo.public_name">
                    <p class="card-text" t-esc="promo.public_name" />
                </div>
            </div>
            <div
                class="modal fade"
                t-att-id="'imagemodal_%s' % promo.id"
                tabindex="-1"
                role="dialog"
                aria-labelledby="Modal-image"
                aria-hidden="true"
                t-if="promo.image_1920"
            >
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button
                                type="button"
                                class="close"
                                data-dismiss="modal"
                                aria-label="Close"
                            >
                                <span>
                                    <i class="fa fa-times" />
                                </span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <img
                                t-attf-src="/web/image/sale.coupon.program/#{promo.id}/image_1920"
                                t-att-alt="'%s' % promo.name"
                                class="img-fluid"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
