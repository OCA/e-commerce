<odoo>

<record id="base_custom_info_template_form" model="ir.ui.view">
    <field name="name">base.custom.info.template.form</field>
    <field name="model">custom.info.template</field>
    <field name="inherit_id"
           ref="base_custom_info.base_custom_info_template_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='property_ids']//field[@name='category_id']"
               position="after">
            <field name="model" invisible="True"/>
            <field name="product_public_filter"
                   attrs="{'invisible': [('model', '!=', 'product.template')]}"/>
        </xpath>
    </field>
</record>

</odoo>
