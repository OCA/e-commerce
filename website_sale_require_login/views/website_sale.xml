<odoo>
    <template
        id="cart"
        inherit_id="website_sale.cart"
        priority="20"
        customize_show="True"
    >
        <xpath expr="//t[@t-set='show_shorter_cart_summary']" position="before">
            <t
                t-set="hide_checkout_button"
                t-value="not (user_authenticated and can_checkout)"
            />
        </xpath>
    </template>
</odoo>
