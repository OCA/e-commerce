<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="abandoned_carts_setting" position="after">
                <setting id="cart_expire_settings">
                    <label for="cart_expire_delay" string="Expire Carts" />
                    <span
                        class="fa fa-lg fa-globe"
                        title="Values set here are website-specific."
                        groups="website.group_multi_website"
                    />
                    <div class="text-muted">
                        Automatically cancel carts without activity after a period of time
                    </div>
                    <div
                        class="content-group"
                        title="Carts are cancelled after this delay."
                    >
                        <div class="row mt16">
                            <div class="col-12">
                                <label
                                    for="cart_expire_delay"
                                    string="Cart is cancelled after"
                                    class="o_light_label me-1"
                                />
                                <field
                                    class="col-2"
                                    name="cart_expire_delay"
                                    widget="float_time"
                                />
                                hours.
                            </div>
                        </div>
                    </div>
                </setting>
            </setting>
        </field>
    </record>
</odoo>
