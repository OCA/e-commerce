                                    <field name="external_name" />
                                </form>
                                <tree stirng="Product Shop Attributes" >
                                    <field name="attribute_id" />
                                    <field name="external_name" />
                                    <field name="sequence" />
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
