<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='shop']" position="after">
                <div
                    class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small"
                >
                    <label
                        for="public_description"
                        class="o_form_label font-weight-bold"
                    />
                </div>
                <field
                    name="public_description"
                    nolabel="1"
                    widget="html"
                    placeholder="This description will be shown on e-commerce frontend"
                />
            </xpath>
        </field>
    </record>
</odoo>
