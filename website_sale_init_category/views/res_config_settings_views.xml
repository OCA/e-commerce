<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='google_analytics_dashboard_setting']"
                position="after"
            >
                <div
                    class="col-xs-12 col-md-6 o_setting_box"
                    id="init_category_setting"
                >
                    <div class="o_setting_right_pane">
                        <label for="init_category_id" />
                        <div class="text-muted">
                            Select start category for ecommerce
                        </div>
                        <div class="content-group" id="init_category_fields">
                            <div class="row mt16">
                                <label
                                    class="col-md-3 o_light_label"
                                    string="Category"
                                    for="init_category_id"
                                />
                                <field name="init_category_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
