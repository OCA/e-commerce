<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

  <template id="assets_frontend" inherit_id="website.assets_frontend" name="Wishlist Assets">
    <xpath expr="." position="inside">
      <link rel='stylesheet' href='/website_sale_wishlist/static/src/css/website_sale_wishlist.css'/>
    </xpath>
  </template>

  <template id="my_account_wishlist" name="Link to wishlist" inherit_id="website.layout">
    <xpath expr="//ul[@class='dropdown-menu js_usermenu']/li[@class='divider']" position="before">
      <li><a href="/shop/wishlist" role="menuitem">My Wishlist</a></li>
    </xpath>
  </template>

</data>
</openerp>
