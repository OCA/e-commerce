<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <template id="product" inherit_id="website_sale.product" name="Wishlist Product">
      <xpath expr="//a[@id='add_to_cart']" position="after">
        or <br/>
        <button class="btn btn-lg mt8 js_check_product" type="submit"
                t-att-formaction="keep('/shop/wishlist/update')">
          Add to Wishlist
        </button>
      </xpath>
    </template>

    <template id="recently_viewed_products_header" inherit_id="website_sale.header"
              name="Recently Viewed Products Header">
      <xpath expr="//header//ul[@id='top_menu']/li[a[@href='/shop/cart']]" position="after">
        <li>
          <a href="/shop/wishlist">
            <i class="fa fa-star"></i>
            My Wishlist
          </a>
        </li>
      </xpath>
    </template>

    <template id="cart_wishlist" inherit_id="website_sale.cart" name="Add move to wishlist to cart">
      <xpath expr="//td/div[@class='input-group oe_website_spinner']" position="after">
        <form action="/shop/cart/update" method="post">
          <input type="hidden" name="product_id" t-att-value="line.product_id.id"/>
          <button type="submit" class="btn btn-default" name="action" value="move_to_wishlist">
            <span class="fa fa-star"></span> Move to wish list
          </button>
        </form>
      </xpath>
    </template>

  </data>
</openerp>
