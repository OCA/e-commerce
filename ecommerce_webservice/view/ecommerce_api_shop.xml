<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_ecommerce_api_shop_form">
            <field name="name">Ecommerce API Shop</field>
            <field name="model">ecommerce.api.shop</field>
            <field name="arch" type="xml">
                <form string="Shop">
                    <field name="shop_identifier" />
                    <newline />
                    <field name="enable_logs" />
                    <field name="logs_all_on_success" attrs="{'invisible': [('enable_logs', '=', False)]}" />
                    <newline />
                    <field name="external_user_id" />
                    <field name="default_shop_id" />
                    <field name="internal_user_id" />
                    <newline />
                    <group colspan="4">
                    <notebook>
                        <page string="Customers">
                            <field name="partner_ids" nolabel="1" />
                        </page>
                        <page string="Addresses">
                            <field name="partner_address_ids" nolabel="1" />
                        </page>
                        <page string="Sales Orders">
                            <field name="sale_order_ids" nolabel="1" />
                        </page>
                    </notebook>
                    </group>
                </form>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="action_shop">
            <field name="name">Shops</field>
            <field name="res_model">ecommerce.api.shop</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_root"
            name="Ecommerce API"
            sequence="500"
        />
        <menuitem
            id="menu_config"
            name="Config"
            parent="menu_root"
            sequence="10"
        />
        <menuitem
            id="menu_config_shop"
            name="Shops"
            parent="menu_config"
            sequence="10"
            action="action_shop"
        />

    </data>
</openerp>

