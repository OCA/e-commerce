<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_ecommerce_api_log_form">
            <field name="name">Ecommerce API Log</field>
            <field name="model">ecommerce.api.log</field>
            <field name="arch" type="xml">
                <form string="Logs">
                    <field name="shop_id" />
                    <field name="state" />
                    <field name="method" />
                    <field name="args" />
                    <field name="exc_info" />
                </form>
            </field>
        </record> 

        <record model="ir.ui.view" id="view_ecommerce_api_log_tree">
            <field name="name">Ecommerce API Log</field>
            <field name="model">ecommerce.api.log</field>
            <field name="arch" type="xml">
                <tree string="Logs">
                    <field name="shop_id" />
                    <field name="state" />
                    <field name="create_date" />
                    <field name="create_uid" />
                    <field name="method" />
                    <field name="args" />
                </tree>
            </field>
        </record> 

        <record model="ir.actions.act_window" id="action_log">
            <field name="name">Shops</field>
            <field name="res_model">ecommerce.api.log</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_logs"
            name="Logs"
            parent="menu_config"
            sequence="10"
            action="action_log"
        />

    </data>
</openerp>

