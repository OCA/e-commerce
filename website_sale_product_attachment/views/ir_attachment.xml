<data>

    <record id="view_attachment_form" model="ir.ui.view">
        <field name="name">Attached to product templates</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form" />
        <field name="arch" type="xml">
            <field name="public" position="after">
                <field name="attached_in_product_tmpl_ids" widget="many2many_tags" options="{'no_create': True}" invisible="context.get('hide_attachment_products', False)" attrs="{'invisible': [('public', '=', False)]}" />
            </field>
        </field>
    </record>

</data>
