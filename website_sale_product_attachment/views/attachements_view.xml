<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <template id="product_attachments" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_details']" position="after">
            <div class="col-sm-5 col-md-5 col-lg-4 col-lg-offset-1" id="product_attachment">
                <t t-if="product.attachments">
                    <hr/>
                    <h4 class="text-muted"> Document </h4>
                    <t t-foreach="product.attachments" t-as="a">
                        <a t-attf-href="/attachments/attachment/#{slug(a)}">
                            <t t-esc="a.name"/>
                        </a>
                        <br/>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
  </data>
</openerp>

